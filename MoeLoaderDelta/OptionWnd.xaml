<Window
    x:Class="MoeLoaderDelta.OptionWnd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Window"
    Width="400"
    Height="505"
    Icon="m.ico"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="135" />
            <!--<RowDefinition Height="70"/>-->
            <RowDefinition Height="168" />
            <RowDefinition Height="120" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Row="0"
            Margin="5,8,5,2"
            Header="顯示設定">
            <Grid>
                <!--<CheckBox x:Name="chkAero" HorizontalAlignment="Left" Content="啟用Aero效果 (重啟程式生效)" IsEnabled="False" Margin="10,13,0,0" VerticalAlignment="Top"/>-->
                <!--<CheckBox x:Name="chkPos" HorizontalAlignment="Left" Content="關閉時記住視窗大小" Margin="10,39,0,0" VerticalAlignment="Top"/>-->
                <TextBlock
                    x:Name="textBlock"
                    Margin="10,13,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="預載入數量" />
                <StackPanel
                    x:Name="stackPanel"
                    Margin="91,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="txtCount"
                        Width="50"
                        Margin="5,5,0,4"
                        x:FieldModifier="private"
                        InputMethod.IsInputMethodEnabled="False"
                        MaxLength="2"
                        PreviewKeyDown="txtPage_PreviewKeyDown"
                        Style="{StaticResource SimpleTextBox}" />
                    <Button
                        x:Name="pageUp"
                        Width="15"
                        Margin="1,5,0,4"
                        x:FieldModifier="private"
                        BorderThickness="1"
                        Click="pageUp_Click"
                        Content="˄"
                        Style="{StaticResource SimpleButton}" />
                    <Button
                        x:Name="pageDown"
                        Width="15"
                        Margin="1,5,0,4"
                        x:FieldModifier="private"
                        BorderThickness="1"
                        Click="pageDown_Click"
                        Content="˅"
                        Style="{StaticResource SimpleButton}" />
                </StackPanel>
                <TextBox
                    x:Name="txtBossKey"
                    Margin="95,45,114,0"
                    VerticalAlignment="Top"
                    PreviewKeyDown="txtBossKey_PreviewKeyDown"
                    Text=""
                    TextWrapping="NoWrap" />
                <TextBlock
                    Margin="10,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="老闆鍵"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="10,78,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="背景圖布局"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="95,78,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="水平"
                    TextWrapping="Wrap" />
                <ComboBox
                    x:Name="cbBgHe"
                    Width="50"
                    Margin="126,75,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    SelectedIndex="2">
                    <ComboBoxItem>居左</ComboBoxItem>
                    <ComboBoxItem>居中</ComboBoxItem>
                    <ComboBoxItem>居右</ComboBoxItem>
                </ComboBox>
                <TextBlock
                    Margin="182,78,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="垂直"
                    TextWrapping="Wrap" />
                <ComboBox
                    x:Name="cbBgVe"
                    Width="50"
                    Margin="213,75,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    SelectedIndex="2">
                    <ComboBoxItem>居上</ComboBoxItem>
                    <ComboBoxItem>居中</ComboBoxItem>
                    <ComboBoxItem>居下</ComboBoxItem>
                </ComboBox>
                <TextBlock
                    Margin="269,78,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="拉伸"
                    TextWrapping="Wrap" />
                <ComboBox
                    x:Name="cbBgSt"
                    Width="50"
                    Margin="298,75,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    SelectedIndex="0">
                    <ComboBoxItem>無</ComboBoxItem>
                    <ComboBoxItem>縮放</ComboBoxItem>
                    <ComboBoxItem>填充</ComboBoxItem>
                </ComboBox>
                <TextBlock
                    Margin="0,76,4,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Cursor="Help"
                    FontSize="14"
                    FontWeight="Bold"
                    MouseDown="TextBlock_MouseDown_1"
                    Text="?"
                    TextDecorations="Underline" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Margin="5,2"
            Header="代理設定">
            <Grid>
                <RadioButton
                    x:Name="rtNoProxy"
                    Margin="10,11,0,0"
                    Checked="chkProxy_Click"
                    Content="不使用代理"
                    IsChecked="True" />
                <RadioButton
                    x:Name="rtSystem"
                    Margin="10,39,0,0"
                    Checked="chkProxy_Click"
                    Content="使用IE代理" />
                <RadioButton
                    x:Name="rtCustom"
                    Margin="10,67,0,0"
                    Checked="chkProxy_Click"
                    Content="自訂" />
                <TextBox
                    x:Name="txtProxy"
                    Height="20"
                    Margin="100,55,20,0"
                    IsEnabled="False"
                    Text="127.0.0.1:1080"
                    TextWrapping="NoWrap" />
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Margin="5,2"
            Header="下載設定">
            <Grid>
                <TextBlock
                    Margin="10,13,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="存儲位置" />
                <TextBox
                    x:Name="txtSaveLocation"
                    Height="20"
                    Margin="95,11,56,0"
                    VerticalAlignment="Top"
                    TextWrapping="NoWrap" />
                <Button
                    Width="40"
                    Height="20"
                    Margin="0,11,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Button_Click_1"
                    Content="瀏覽" />
                <CheckBox
                    x:Name="chkSepSave"
                    Margin="200,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="chkSepSave_Click"
                    Content="分站點儲存"
                    ToolTip="將圖片按站點分目錄下載儲存" />
                <CheckBox
                    x:Name="chkSaSave"
                    Margin="294,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="分上傳者"
                    IsEnabled="False"
                    ToolTip="在分站點目錄下將圖片按上傳者儲存到子目錄中" />
                <TextBlock
                    Margin="10,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="同時下載數量" />
                <StackPanel
                    Margin="91,38,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="txtParal"
                        Width="50"
                        Margin="5,5,0,4"
                        InputMethod.IsInputMethodEnabled="False"
                        MaxLength="5"
                        PreviewKeyDown="txtPage_PreviewKeyDown"
                        Style="{StaticResource SimpleTextBox}" />
                    <Button
                        Width="15"
                        Margin="1,5,0,4"
                        BorderThickness="1"
                        Click="pageUp_Click1"
                        Content="˄"
                        Style="{StaticResource SimpleButton}" />
                    <Button
                        Width="15"
                        Margin="1,5,0,4"
                        BorderThickness="1"
                        Click="pageDown_Click1"
                        Content="˅"
                        Style="{StaticResource SimpleButton}" />
                </StackPanel>
                <TextBox
                    x:Name="txtPattern"
                    Margin="95,76,30,0"
                    VerticalAlignment="Top"
                    Text=""
                    TextWrapping="NoWrap" />
                <TextBlock
                    Margin="10,76,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Text="檔案命名格式"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="textNameHelp"
                    Margin="0,75,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Cursor="Help"
                    FontSize="14"
                    FontWeight="Bold"
                    MouseDown="textNameHelp_MouseDown"
                    Text="?"
                    TextDecorations="Underline" />
                <Button
                    x:Name="FNRsite"
                    Margin="97,0,0,24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%site"
                    ToolTip="插入 站點 格式" />
                <Button
                    x:Name="FNRid"
                    Margin="136,0,0,24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%id"
                    ToolTip="插入 作品ID 格式" />
                <Button
                    x:Name="FNRtag"
                    Margin="165,0,0,24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%tag"
                    ToolTip="插入 作品標籤 格式" />
                <Button
                    x:Name="FNRdesc"
                    Margin="202,0,0,24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%desc"
                    ToolTip="插入 作品描述 格式" />
                <Button
                    x:Name="FNRauthor"
                    Margin="247,0,0,24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%author"
                    ToolTip="插入 作者名 格式" />
                <Button
                    x:Name="FNRdate"
                    Margin="304,0,0,24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%date"
                    ToolTip="插入 上載時間 格式" />
                <Button
                    x:Name="FNRimgp"
                    Margin="97,0,0,2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="%imgp[n]"
                    ToolTip="插入 圖片頁數[補0個數] 格式" />
                <Button
                    x:Name="FNRcut"
                    Margin="160,0,0,2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Content="&lt;!&lt;"
                    ToolTip="插入 檔案名裁剪符 格式" />
            </Grid>
        </GroupBox>
        <TextBlock
            x:Name="txtUrl"
            Margin="0,0,6,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            DataContext="{Binding}"
            Foreground="#FF1F78D6"
            MouseDown="TextBlock_MouseDown"
            Text="關於 MoeLoader Δ"
            TextDecorations="Underline" />
        <Button
            Grid.Row="3"
            Width="75"
            Height="27"
            Margin="0,0,96,6"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Button_Click"
            Content="確定"
            IsDefault="True" />
        <Button
            Grid.Row="3"
            Width="75"
            Height="27"
            Margin="0,0,10,6"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Button1_Click"
            Content="取消"
            IsCancel="True" />
        <Button
            Grid.Row="3"
            Width="75"
            Height="27"
            Margin="10,0,0,6"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="Button2_Click"
            Content="恢復預設" />
    </Grid>
</Window>
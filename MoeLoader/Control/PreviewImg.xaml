<UserControl
    x:Class="MoeLoader.Control.PreviewImg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MoeLoader.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xly="clr-namespace:MoeLoader.Control"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="prewimg" Grid.IsSharedSizeScope="True" />
        <Grid x:Name="ProgressPlate">
            <ProgressBar
                x:Name="pdload"
                Width="300"
                Height="300"
                Margin="0"
                BorderBrush="#EE3A8CEE"
                BorderThickness="24"
                Maximum="1"
                Style="{DynamicResource LoopProcessBar}" />
            <TextBlock
                x:Name="pdtext"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="34"
                FontWeight="Bold"
                Text="{Binding Value, Mode=OneWay, ElementName=pdload, StringFormat={}{0:p0}}" />
        </Grid>
    </Grid>
</UserControl>
